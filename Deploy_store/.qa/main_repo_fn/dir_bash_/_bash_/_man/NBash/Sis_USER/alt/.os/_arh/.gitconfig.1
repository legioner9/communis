	type = cat-file -t
	dump = cat-file -p
[color]
	ui = true
# --------- set with kdiff3 ----------
[diff]
	name = true
	tool = kdiff3
	guitool = kdiff3
[difftool "kdiff3"]
	path = C:/Program Files/KDiff3/kdiff3.exe
[difftool]
	prompt = false
	keepBackup = false
	trustExitCode = false
[merge]
	tool = kdiff3
[mergetool]
	prompt = false
	keepBackup = false
	keepTemporaries = false
[mergetool "kdiff3"]
	path = C:/Program Files/KDiff3/kdiff3.exe

